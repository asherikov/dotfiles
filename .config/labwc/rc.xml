<?xml version="1.0"?>

<!--
  This is a very simple config file with many options missing. For a complete
  set of options with comments, see docs/rc.xml.all
-->

<labwc_config>

  <core>
    <gap>10</gap>
  </core>

  <theme>
    <name>Arc-Dark-Custom</name>
    <cornerRadius>0</cornerRadius>
    <font name="cronyx" size="16" />
  </theme>

  <desktops number="9">
  </desktops>

  <keyboard>
    <default />
    <keybind key="C-A-t">
      <action name="Execute" command="foot" />
    </keybind>
    <keybind key="C-A-x">
      <action name="Execute" command="qutebrowser.sh" />
    </keybind>
    <keybind key="C-A-f">
      <action name="Execute" command="firefox" />
    </keybind>
    <keybind key="W-q">
      <action name="GoToDesktop" to="1" wrap="yes" />
    </keybind>
    <keybind key="W-w">
      <action name="GoToDesktop" to="2" wrap="yes" />
    </keybind>
    <keybind key="W-e">
      <action name="GoToDesktop" to="3" wrap="yes" />
    </keybind>
    <keybind key="W-a">
      <action name="GoToDesktop" to="4" wrap="yes" />
    </keybind>
    <keybind key="W-s">
      <action name="GoToDesktop" to="5" wrap="yes" />
    </keybind>
    <keybind key="W-d">
      <action name="GoToDesktop" to="6" wrap="yes" />
    </keybind>
    <keybind key="W-z">
      <action name="GoToDesktop" to="7" wrap="yes" />
    </keybind>
    <keybind key="W-x">
      <action name="GoToDesktop" to="8" wrap="yes" />
    </keybind>
    <keybind key="W-c">
      <action name="GoToDesktop" to="9" wrap="yes" />
    </keybind>
    <keybind key="A-F11">
       <action name="ToggleFullscreen" />
    </keybind>
    <keybind key="A-F10">
       <action name="ToggleMaximize" />
    </keybind>
    <!--
      Remove a previously defined keybind
      A shorter alternative is <keybind key="W-F4" />
    -->
  </keyboard>

  <mouse>
    <default />
    <!-- Show a custom menu on desktop right click -->
    <context name="Root">
      <mousebind button="Right" action="Press">
        <action name="ShowMenu" menu="some-custom-menu" />
      </mousebind>
    </context>
  </mouse>
</labwc_config>
